{
    "name": "tabs",
    "scopeName": "source.tabs",
    "patterns": [
        {
            "include": "#constant"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#operator"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#support"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "constant": {
            "patterns": [
                {
                    "comment": "Note",
                    "match": "[CDEFGAB](b|#)?(m|M|min|maj|minmaj|dim|aug|\\+)?(\\d)?(sus|sus2|sus4)?(add)?(2|4|5|6|7|9|10|11|13)?(#11)?(b5)?(\\z|\\n|\\r|\\/| )?",
                    "name": "constant.note.tabs"
                },
                {
                    "comment": "Note",
                    "match": "[cdefgabCDEFGAB]",
                    "name": "constant.note.tabs"
                },
                {
                    "comment": "Notes",
                    "match": "(\\d)",
                    "name": "constant.numeric.fret.tabs"
                }
            ]
        },
        "keyword": {
            "patterns": []
        },
        "operator": {
            "patterns": [
                {
                    "match": "(?<=\\d)(h)",
                    "name": "operator.tabs",
                    "captures": {
                        "1": {
                            "name": "operator.hammer-on.tabs"
                        }
                    }
                },
                {
                    "match": "(?<=\\d)(p)",
                    "name": "operator.tabs",
                    "captures": {
                        "1": {
                            "name": "operator.pull-off.tabs"
                        }
                    }
                },
                {
                    "match": "(?<=\\d)(~+)",
                    "name": "operator.tabs",
                    "captures": {
                        "1": {
                            "name": "operator.vibrato.tabs"
                        }
                    }
                },
                {
                    "match": "(?<=\\d)(\\^)",
                    "name": "operator.tabs",
                    "captures": {
                        "1": {
                            "name": "operator.bend-up.tabs"
                        }
                    }
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "match": "(-)",
                    "name": "punctuation.other.dash.tabs"
                },
                {
                    "match": "(\\|)",
                    "name": "punctuation.other.line-delimiter.tabs"
                },
                {
                    "match": "(x)",
                    "name": "punctuation.other.dead-note.tabs"
                }
            ]
        },
        "storage": {
            "patterns": [
                {
                    "match": "^(\\[)([^\\[\\]]+)(\\]$)",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.section.tabs"
                        },
                        "2": {
                            "name": "variable.other.section.tabs"
                        },
                        "3": {
                            "name": "punctuation.definition.section.tabs"
                        }
                    }
                }
            ]
        },
        "support": {
            "patterns": []
        },
        "variable": {
            "patterns": []
        }
    }
}