{
    "json.schemas": [{
        "fileMatch": ["../src/definitions/*.jsonc"],
        "url": "../src/tmLanguage.json-schema.json",
        "schema": {
            "allowTrailingCommas": true
        }
    }],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "punctuation.other.dash.tabs",
                ],
                "settings": {"foreground": "#505050"},
            },
            {
                "scope": [
                    "punctuation.definition.section.tabs",
                ],
                "settings": {"foreground": "#808080"},
            },
        ]
    },
}
