{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "repository": {
        "operator": {
            "patterns": [
                {
                    "match": "(?<=\\d)(h)",
                    "name": "operator.tabs",
                    "captures": { "1": { "name": "operator.hammer-on.tabs" } }
                },
                {
                    "match": "(?<=\\d)(p)",
                    "name": "operator.tabs",
                    "captures": { "1": { "name": "operator.pull-off.tabs" } }
                },
                {
                    "match": "(?<=\\d)(~+)",
                    "name": "operator.tabs",
                    "captures": { "1": { "name": "operator.vibrato.tabs" } }
                },
                {
                    "match": "(?<=\\d)(\\^)",
                    "name": "operator.tabs",
                    "captures": { "1": { "name": "operator.bend-up.tabs" } }
                },
            ]
        }
    }
}
